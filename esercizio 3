<!DOCTYPE html>
<html>
<head>
  <title>Numeri successivi e 10% di un numero</title>
</head>
<body>

  <label for="numero">Inserisci un numero: </label>
  <input type="number" id="numero">
  <button onclick="stampaNumeri()">Stampa numeri</button>

  <h3>Numeri successivi: </h3>
  <div id="numeri-successivi"></div> 

  <h3>10% del numero dato:</h3>
  <div id="10-percento"></div>

  <script>
    function stampaNumeri() {
      // Ottenere il numero dall'input
      var numeroInput = parseInt(document.getElementById("numero").value);

      // Stampa dei numeri successivi
      var numeriSuccessivi = "";
      for (var i = 1; i <= numeroInput; i++) {
        numeriSuccessivi += i + " ";
      }
      document.getElementById("numeri-successivi").innerHTML = numeriSuccessivi;

      // Calcolo del 10% del numero dato
      var dieciPercento = numeroInput * 0.1;
      document.getElementById("10-percento").innerText = dieciPercento;
    }
  </script>

</body>
</html>
